<launch> 
    <arg name="do_ira_debug" default="false" />
    <arg if="$(arg do_ira_debug)" name="ira_launch_prefix" value="xterm -e gdb --args" />
    <arg unless="$(arg do_ira_debug)" name="ira_launch_prefix" value="" />

    <!-- Merge the lasers -->
    <node 
        launch-prefix="$(arg ira_launch_prefix)"
        pkg="ira_laser_tools" 
        name="laserscan_multi_merger" 
        type="laserscan_multi_merger" 
        output="screen">
        <param name="angle_increment" value="0.017453292519943" />
		<param name="destination_frame" value="base_link"/>
		<param name="cloud_destination_topic" value="/merged_cloud"/>
		<param name="scan_destination_topic" value="/scan_multi"/>
        <param name="laserscan_topics" value ="/plaser_scan_left /plaser_scan_right" />
	</node>
</launch>