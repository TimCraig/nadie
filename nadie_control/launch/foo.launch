<launch>
    <arg name="do_nadie_motor" default="false" />
    <arg name="do_t265" default="true" />
    <arg name="offline"          default="false"/>
 
    <include file="$(find nadie_control)/launch/machines.xml" />
    
    <include unless="$(arg offline)" 
        file="$(find realsense2_camera)/launch/rs_camera.launch">
        <arg name="align_depth" value="true"/>
        <arg name="camera" value="d435" />
        <arg name="linear_accel_cov" value="1.0"/>
        <arg name="serial_no" value="836612072267" />
        <arg name="unite_imu_method" value="linear_interpolation"/>
    </include>
    
    <node pkg="imu_filter_madgwick" type="imu_filter_node" name="ImuFilter">
        <param name="_use_ma" type="bool" value="false" />
        <param name="_publish_tf" type="bool" value="false" />
        <param name="_world_frame" type="string" value="enu" />
        <remap from="/imu/data_raw" to="/d435/imu"/>
    </node>

    <!-- Bring up the motor stack -->
    <include if="$(arg do_nadie_motor)" file="$(find nadie_control)/launch/nadie_motor.launch" />

    <!--node
      name="camera_link_to_base_footprint_link" 
      pkg="tf" 
      type="static_transform_publisher" 
      args="-0.2425 0.0 -0.068 0 0.0 0 camera_link base_link 100" 
    /-->

    <!-- Launch the T265 tracking camera -->
    <include if="$(arg do_t265)" file="$(find nadie_control)/launch/t265a.launch" />

    <include file="$(find rtabmap_ros)/launch/rtabmap.launch" >
        <arg name="args"                    default="--delete_db_on_start" />
        <arg name="depth_topic" value="/d435/aligned_depth_to_color/image_raw" />
        <arg name="rgbd_topic" value="/d435/color/image_raw" />
        <arg name="camera_info_topic" value="/d435/color/camera_info" />
        <arg name="approx_sync" value="true" />
        <remap from="/camera/rgb/image_rect_color" to="/d435/rgb/image_rect_color" />
    </include>

</launch>
