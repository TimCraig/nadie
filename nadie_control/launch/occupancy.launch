<launch>
  <arg name="do_nadie_motor" default="true" />

  <!-- Bring up the motor stack -->
  <include if="$(arg do_nadie_motor)" file="$(find nadie_control)/launch/nadie_motor.launch" />

  <node
    name="camera_link_to_base_footprint_link" 
    pkg="tf" 
    type="static_transform_publisher" 
    args="-0.2425 0.0 -0.2101 0 0.0 0 t265_pose_frame base_footprint 200" />

  <include file="$(find occupancy)/launch/occupancy.launch"/>
  <include file="$(find nadie_control)/launch/cameras.launch"/>
</launch>
