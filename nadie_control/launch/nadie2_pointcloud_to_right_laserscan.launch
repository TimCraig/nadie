<launch>
    <arg name="do_d435" default="false" />
    <arg name="do_pointcloud_to_laserscan" default="true" />

    <!-- Launch the D435 depth camera. Note this is outside of "nadie" group for name collision avoidance. -->
    <include if="$(arg do_d435)" file="$(find nadie_control)/launch/nadie2_d435_right.launch" />

    <include file="$(find nadie_control)/launch/machines.xml" />

    <!-- Launch the pointcould to laserscan node /-->
    <node
        if="$(arg do_pointcloud_to_laserscan)"
        machine="nanoa"
        name="right_pointcloud_to_laserscan"
        pkg="pointcloud_to_laserscan"
        type="pointcloud_to_laserscan_node"
    >
        <param name="max_height"        value="1.0" />
        <param name="min_height"        value="0.0" />
        <param name="range_max"         value="6.0" />
        <param name="range_min"         value="0.04" />
        <param name="target_frame"      value="d435_right_link" />
        <param name="use_inf"           value="true" />
        <remap to="/plaser_scan_right"             from="scan" />
        <remap to="/d435_right/depth/color/points" from="cloud_in" />
    </node>
</launch>