<launch> 
    <arg name="do_amcl" default="true" />
    <arg name="do_d435" default="true" />
    <arg name="do_map_server" default="true" />
    <arg name="do_nadie_motor" default="true" />
    <arg name="do_pointcloud_to_laserscan" default="true" />
    <arg name="do_rviz" default="false" />
    <arg name="do_t265" default="true" />

    <arg name="robot_namespace" default="/nadie" />

    <!-- Launch the left D435 depth camera. Note this is outside of "nadie" group for name collision avoidance. -->
    <include if="$(arg do_d435)" file="$(find nadie_control)/launch/nadie2_d435_left.launch" />

    <!-- Launch the right D435 depth camera. Note this is outside of "nadie" group for name collision avoidance. -->
    <include if="$(arg do_d435)" file="$(find nadie_control)/launch/nadie2_d435_right.launch" />

    <node 
        launch-prefix="xterm -e gdb --args"
        if="$(arg do_d435)"
        pkg="ira_laser_tools" 
        name="laserscan_multi_merger" 
        type="laserscan_multi_merger" 
        output="screen">
		<param name="destination_frame" value="/cart_frame"/>
		<param name="cloud_destination_topic" value="/merged_cloud"/>
		<param name="scan_destination_topic" value="/scan_multi"/>
        <param name="laserscan_topics" value ="/laser_scan_left /laser_scan_right" />
	</node>
 <!-- Load the map -->
    <include if="$(arg do_map_server)" 
             file="$(find snowberry_map)/launch/nadie2.map.launch" >
        <arg name="robot_namespace" value="$(arg robot_namespace)" />
    </include>

    <!-- Bring up the motor stack -->
    <include if="$(arg do_nadie_motor)" file="$(find nadie_control)/launch/nadie2_motor.launch" >
         <arg name="robot_namespace" value="$(arg robot_namespace)" />
   </include>

    <!-- Launch the T265 tracking camera -->
    <include if="$(arg do_t265)" file="$(find nadie_control)/launch/t265a.launch" />

    <!-- Launch visualization in rviz --> 
    <node if="$(arg do_rviz)" name="rviz" pkg="rviz" type="rviz" args="-d $(find nadie_rviz)/control.rviz" required="true" /> 

    <!-- Launch pointcloud2 for the left camera to laser scan for use with AMCL -->
    <include if="$(arg do_pointcloud_to_laserscan)" file="$(find nadie_control)/launch/nadie2_pointcloud_to_left_laserscan.launch" />

    <!-- Launch pointcloud2 for the right camera to laser scan for use with AMCL -->
    <include if="$(arg do_pointcloud_to_laserscan)" file="$(find nadie_control)/launch/nadie2_pointcloud_to_right_laserscan.launch" />

    <!-- Bring up AMCL -->
    <include if="$(arg do_amcl)" file="$(find nadie_control)/launch/nadie2_amcl.launch" />
</launch>