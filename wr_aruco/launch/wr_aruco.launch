  <arg name="doDebug" default="false" />
  <arg if="$(arg doDebug)" name="launchPrefix" value="xterm -e gdb --args" />
  <arg unless="$(arg doDebug)" name="launchPrefix" value="" />

  <arg name="ns" value="wr_aruco" />

  <group ns="$(arg ns)">
    <!-- load the controller yaml -->
    <rosparam file="$(find wr_aruco)/cfg/wr_aruco.yaml" command="load" subst_value="true" />

    <!-- load the camera intrinsics yaml -->
    <rosparam file="$(find wr_aruco)/cfg/wr_aruco_camera.yaml" command="load" subst_value="true" />

    <!-- Start the aruco marker node -->
    <node 
      launch-prefix="$(arg launchPrefix)" 
      name="wr_aruco_node" 
      pkg="wr_aruco"  
      type="wr_aruco_node" 
      output="screen" 
      respawn="false" >
    </node>

  </group>
</launch>